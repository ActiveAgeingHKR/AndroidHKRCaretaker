<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.bitharis.panos.hkrcaretaker.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Details"
        android:id="@+id/taskDetailsButton"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/task_list_item_taskTitleTextView"
        android:layout_toLeftOf="@id/taskDetailsButton"
        android:textStyle="bold"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Task Title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/task_list_item_dueDateTextView"
        android:layout_below="@id/task_list_item_taskTitleTextView"
        android:layout_toLeftOf="@id/taskDetailsButton"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:text="Task Due Date"/>



</RelativeLayout>
